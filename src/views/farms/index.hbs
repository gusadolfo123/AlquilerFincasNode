<header class="bg-gray-300 p-16 border-t-4 border-b-4 border-green-500"
    style="background-image: url(https://picsum.photos/1920/800/?image=478); background-position:center;">
    <div class="container">
        <h1 class="text-center font-bold text-white text-4xl">Encuentra tu Sitio Ideal</h1>
    </div>
</header>

<div class="container mx-auto">
    <section class="mt-2">
        <div class="flex justify-between mx-3 text-sm text-white">
            <p class="bg-green-500 rounded-full px-2">Total Fincas: {{total}}</p>
            <p class="bg-green-500 rounded-full px-2">Pagina Actual: {{current}} de {{pages}}</p>
        </div>
        <div class="flex content-start flex-wrap">
            {{#each farms}}
            <div class="w-1/3 p-3">
                <div class="shadow hover:shadow hover:bg-gray-100">
                    <img class="w-full" src="{{images.1.url}}" alt="Sunset in the mountains">
                    <div class="px-6 py-4">
                        <div class="font-bold text-xl mb-2">{{name}}</div>
                        <p class="text-gray-700 text-base">
                            {{trimString description}}
                        </p>
                    </div>
                    <div class="px-6 py-4">
                        <span
                            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">#photography</span>
                        <span
                            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">#travel</span>
                        <span
                            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700">#winter</span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="flex-row my-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    {{#times pages}}
                    <li class="page-item"><a class="page-link" href="/farms/{{this}}">{{this}}</a></li>
                    {{/times}}
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </section>
</div>