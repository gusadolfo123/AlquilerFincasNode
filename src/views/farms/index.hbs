<header class="bg-gray-300 p-16 border-t-4 border-b-4 border-green-500"
    style="background-image: url(https://picsum.photos/1920/800/?image=478); background-position:center;">
    <div class="container">
        <h1 class="text-center font-bold text-white text-4xl">Encuentra tu Sitio Ideal</h1>
    </div>
</header>

<div class="flex-row bg-grandient text-white border-b-4 border-green-500">
    <div class="container mx-auto">
        <div class="flex px-3 pt-4 pb-5 text-center">
            <div class="flex-1">
                <label for="" class="text-center">Fechas</label>
                <div class="flex flex-row px-2">
                    <input id="dtEntrada" class="rounded-l-lg bg-gray-200 text-gray-800 px-3 py-2" placeholder="entrada"
                        name="entrada1">
                    <input id="dtSalida" class="rounded-r-lg bg-gray-200 text-gray-800 px-3 py-2" placeholder="salida"
                        name="salida">
                </div>
            </div>
            <div class="flex-1 px-2">
                <label for="" class="text-center">Cantidad Huespedes</label>
                <input id="huespedes" class="w-full rounded-lg bg-gray-200 text-gray-800 px-3 py-2"
                    placeholder="Nro Huespedes" name="huespedes">
            </div>
            <div class="flex-1 px-2">
                <label for="" class="text-center">Departamento</label>
                <select class="w-full rounded-lg bg-gray-200 text-gray-800 px-3 py-2">
                    <option>Departamento</option>
                    <option>1</option>
                    <option>2</option>
                </select>
            </div>
            <div class="flex-1 px-2">
                <label for="" class="text-center">_</label>
                <div class="flex justify-center items-center">
                    <a href="/user/signin"
                        class="text-white w-full py-2 bg-green-400 font-bold rounded-lg px-4 hover:bg-green-500 hover:text-white">Buscar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mx-auto mt-4 flex">
    <div class="mt-2 w-1/5">
        <span class="border rounded-full px-2 border-green-500 pb-1 hover:bg-green-500 hover:text-white"
            data-toggle="tooltip" data-placement="top" title="Borrar Filtro">Billar
            <a href="#" class="hover:text-white">
                <i class="far fa-times-circle"></i>
            </a>
        </span>
    </div>
    <div class="flex justify-center items-center mt-2 px-3 w-4/5">
        <input type="text" name="search" id="search" placeholder="Buscar..."
            class="border-l border-t border-b border-green-500 px-4 rounded-bl-full rounded-tl-full py-1 w-full bg-gray-300 outline-none"><i
            class="fas fa-search px-4 py-2 rounded-br-full rounded-tr-full border-t border-b border-r border-green-500 bg-gray-300 cursor-pointer"
            id="iconSearch"></i>
    </div>
</div>

<div class="container mx-auto mt-4 flex">
    <aside class="flex-row mt-2 w-1/5">
        <h3 class="text-center border-t-4 border-green-700 p-6 text-2xl font-semibold bg-green-500 text-gray-100">
            Servicios</h3>
        <div class=" flex-col my-4 px-3">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="check1">
                <label class="custom-control-label" for="check1">Billar</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="check2">
                <label class="custom-control-label" for="check2">Parqueadero</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="check3">
                <label class="custom-control-label" for="check3">Lancha</label>
            </div>
            <div>
                <label for="" class="text-center mt-4">Precios</label>
                <input id="ex2" type="text" class="span2" value="" data-slider-min="10" data-slider-max="1000"
                    data-slider-step="5" data-slider-value="[250,450]" />
            </div>
        </div>
        <div class=" flex-col my-4 px-3 py-2 text-center bg-green-500 border-b-4 border-green-700">
            <a href="#" class="bg-white px-3 py-1 text-xl text-gray-600 rounded-full ">Filtrar</a>
        </div>
        {{!-- <div class="flex-col">
            <h3 class="text-center">Publicidad</h3>
            <div class="image-wrapper w-full">
                <a href="#">
                    <img class="w-full" src="/images/descarga.jpg" alt="">
                </a>
            </div>
            <div class="image-wrapper w-full">
                <a href="#">
                    <img class="w-full h-64" src="/images/images.jpg" alt="">
                </a>
            </div>
        </div> --}}
    </aside>
    <section class="mt-2 w-4/5">
        <div class="flex justify-between mx-3 text-sm text-white">
            {{#if pages}}
            <p class="bg-green-500 rounded-full px-2">Total Fincas: {{total}}</p>
            <p class="bg-green-500 rounded-full px-2">Pagina: {{current}} de {{pages}}</p>
            {{/if}}
        </div>
        <div class="flex content-start flex-wrap">
            {{#each farms}}
            <div class="w-1/3 p-6">
                <div class=" pb-2 shadow hover:shadow-md">
                    <div class="image-wrapper w-full">
                        <a href="#">
                            <img class="w-full h-48" src="{{images.1.url}}" alt="">
                        </a>
                    </div>
                    <div class="px-6 py-2">
                        <div class="font-bold text-sm">{{name}}</div>
                        <p class="text-gray-700 text-base">
                            {{trimString description}}
                        </p>
                    </div>
                    <div class="px-4 -mx-2 bg-green-500 text-white prices flex justify-between">
                        <p class="flex-1 text-left cursor-pointer" data-toggle="tooltip" data-placement="bottom"
                            title="Valor por Persona">
                            <i class="fas fa-user"></i> $ {{price prices.low_season.per_person}}</p>
                        <p class="flex-1 text-right cursor-pointer" data-toggle="tooltip" data-placement="bottom"
                            title="Valor Total">
                            <i class="fas fa-users"></i> $ {{price prices.low_season.total}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="flex-row my-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    {{#if pages}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    {{#times pages}}
                    <li class="page-item"><a class="page-link" href="/farms/{{this}}">{{this}}</a></li>
                    {{/times}}
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </section>
</div>

<script>
    $("#search").focus(function () {
        $("#search").removeClass('bg-gray-300');
        $("#iconSearch").removeClass('bg-gray-300');
    });
    $("#search").focusout(function () {
        $("#search").addClass('bg-gray-300');
        $("#iconSearch").addClass('bg-gray-300');
    });
    $('#dtEntrada').datepicker({
        uiLibrary: 'bootstrap4'
    });
    $('#dtSalida').datepicker({
        uiLibrary: 'bootstrap4'
    });
    let slider = new Slider('#ex2', {});
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>